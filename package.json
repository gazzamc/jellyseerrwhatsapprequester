{
  "name": "requester",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gazzamc/jellyseerrwhatsapprequester.git"
  },
  "description": "jellyseerr requester bot for WhatsApp",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --runInBand",
    "start": "node src/index.js",
    "lint": "eslint \"apps/**/*.ts\" \"libs/**/*.ts\" \"tests/**/*.ts\"",
    "lint:staged": "lint-staged",
    "lint:fix": "eslint --fix \"apps/**/*.ts\" \"libs/**/*.ts\" \"tests/**/*.ts\"",
    "pre-commit": "npm run lint:staged && npm run test:unit",
    "release:major": "standard-version --release-as major && git push --follow-tags",
    "release:minor": "standard-version --release-as minor && git push --follow-tags",
    "release:patch": "standard-version --release-as patch && git push --follow-tags",
    "clean": "rmdir -r ./node_modules",
    "prepare": "husky"
  },
  "keywords": [
    "jellyseerr",
    "bot",
    "WhatsApp"
  ],
  "author": "Gary McGovern",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.32.0"
  },
  "devDependencies": {
    "commitizen": "^4.3.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.3.3",
    "standard-version": "^9.5.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "engines": {
    "node": "22.20.0"
  }
}
